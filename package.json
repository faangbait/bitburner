{
  "scripts": {
    "build": "npm-run-all buildTs copyResources",
    "buildTs": "tsc -p tsconfig.json",
    "clean": "rm -rf build/*",
    "copyResources": "mkdir -p src/resources && cp -r src/resources/ build/",
    "re": "npm-run-all clean buildTs copyResources"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.4"
  }
}
